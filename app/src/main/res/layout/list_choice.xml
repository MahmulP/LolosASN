<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:id="@+id/cv_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/white"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:checkedIcon="@null"
    app:rippleColor="@color/otherPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_choice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/alphabet_a"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/circle_border"
                android:backgroundTint="@color/otherPrimary"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="@id/tv_choice_text"
                app:layout_constraintBottom_toBottomOf="@id/tv_choice_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_choice_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/lorem_ipsum"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_choice"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>