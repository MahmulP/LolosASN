<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.dialog.TryoutInfoDialogFragment">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/reminder_logo"
        android:src="@drawable/ic_reminder"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/important_information"
        android:textColor="@color/primaryColor"
        android:textSize="25sp"
        android:gravity="center"
        app:minTextSize="12sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/info_desc_tryout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_skor_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:text="@string/wrong_point"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_easy"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/grey"
            app:strokeColor="@color/grey"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_skor_easy"
            app:layout_constraintStart_toStartOf="@id/tv_skor_easy"
            app:layout_constraintEnd_toEndOf="@id/tv_skor_easy">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_line_top"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:contentDescription="@string/divider"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/tv_skor_easy"
            app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
            app:layout_constraintStart_toEndOf="@id/cv_ket_easy"
            app:layout_constraintEnd_toStartOf="@id/cv_ket_medium" />

        <TextView
            android:id="@+id/tv_skor_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="48dp"
            android:text="@string/wrong_point"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_skor_easy" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_medium"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/red"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_skor_medium"
            app:layout_constraintStart_toStartOf="@id/tv_skor_medium"
            app:layout_constraintEnd_toEndOf="@id/tv_skor_medium">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/wrong"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:contentDescription="@string/divider"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/tv_skor_easy"
            app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
            app:layout_constraintStart_toEndOf="@id/cv_ket_medium"
            app:layout_constraintEnd_toStartOf="@id/cv_ket_hard" />

        <TextView
            android:id="@+id/tv_skor_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="48dp"
            android:text="@string/right_point"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_skor_medium" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_hard"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/green_normal"
            app:strokeColor="@color/green_normal"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_skor_hard"
            app:layout_constraintStart_toStartOf="@id/tv_skor_hard"
            app:layout_constraintEnd_toEndOf="@id/tv_skor_hard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oke"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>