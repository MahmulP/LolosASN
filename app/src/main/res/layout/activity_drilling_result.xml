<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DrillingResultActivity">

    <View
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_home"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="@string/drilling_soal"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp">

            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/drilling_analysis"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/drilling_desc_analysis"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_analysis" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_drilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_description"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/detail_hasil"
                        android:textSize="24sp"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAllCaps="true"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart_data"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/total_point_text"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toStartOf="@id/chart_data"
                        app:layout_constraintEnd_toEndOf="@id/chart_data"
                        app:layout_constraintTop_toBottomOf="@id/chart_data" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_skor"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/orange"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="7dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_total_text"
                        app:layout_constraintStart_toStartOf="@id/tv_total_text"
                        app:layout_constraintEnd_toEndOf="@id/tv_total_text">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="90"
                                android:textSize="15sp"
                                android:textColor="@color/orange"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/iv_coin"/>

                            <ImageView
                                android:id="@+id/iv_coin"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_coin"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tv_score"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_skor_easy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        tools:text="@string/total_soal"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toBottomOf="@id/cv_skor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_skor_medium" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_ket_easy"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/green_400"
                        app:strokeColor="@color/green_400"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_skor_easy"
                        app:layout_constraintStart_toStartOf="@id/tv_skor_easy"
                        app:layout_constraintEnd_toEndOf="@id/tv_skor_easy">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/easy"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto_bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/iv_line_top"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:contentDescription="@string/divider"
                        android:src="@drawable/vertical_line"
                        app:layout_constraintTop_toTopOf="@id/tv_skor_easy"
                        app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
                        app:layout_constraintStart_toEndOf="@id/cv_ket_easy"
                        app:layout_constraintEnd_toStartOf="@id/cv_ket_medium" />

                    <TextView
                        android:id="@+id/tv_skor_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/total_soal"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="@id/tv_skor_easy"
                        app:layout_constraintStart_toStartOf="@id/chart_data"
                        app:layout_constraintEnd_toEndOf="@id/chart_data" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_ket_medium"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/primaryColor"
                        app:strokeColor="@color/primaryColor"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_skor_medium"
                        app:layout_constraintStart_toStartOf="@id/tv_skor_medium"
                        app:layout_constraintEnd_toEndOf="@id/tv_skor_medium">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_status_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/medium"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto_bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:contentDescription="@string/divider"
                        android:src="@drawable/vertical_line"
                        app:layout_constraintTop_toTopOf="@id/tv_skor_easy"
                        app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
                        app:layout_constraintStart_toEndOf="@id/cv_ket_medium"
                        app:layout_constraintEnd_toStartOf="@id/cv_ket_hard" />

                    <TextView
                        android:id="@+id/tv_skor_hard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/total_soal"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="@id/tv_skor_medium"
                        app:layout_constraintStart_toEndOf="@id/tv_skor_medium"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_ket_hard"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/red"
                        app:strokeColor="@color/red"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_skor_hard"
                        app:layout_constraintStart_toStartOf="@id/tv_skor_hard"
                        app:layout_constraintEnd_toEndOf="@id/tv_skor_hard">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_status_hard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hard"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto_bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_benar"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/thirdPrimary"
                        app:strokeColor="@color/thirdPrimary"
                        app:layout_constraintTop_toBottomOf="@id/cv_ket_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cv_kosong">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_total_benar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="@string/point"
                                android:textSize="25sp"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/right"
                                android:fontFamily="@font/roboto_bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_kosong"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/grey_300"
                        app:strokeColor="@color/thirdPrimary"
                        app:layout_constraintTop_toBottomOf="@id/cv_ket_medium"
                        app:layout_constraintStart_toStartOf="@id/chart_data"
                        app:layout_constraintEnd_toEndOf="@id/chart_data">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_total_kosong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="@string/point"
                                android:textSize="25sp"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/empty"
                                android:fontFamily="@font/roboto_bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_salah"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/red_100"
                        app:strokeColor="@color/thirdPrimary"
                        app:layout_constraintTop_toBottomOf="@id/cv_ket_medium"
                        app:layout_constraintStart_toEndOf="@id/cv_kosong"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_total_salah"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="25sp"
                                tools:text="@string/point" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/wrong" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/waktu_pengerjaan"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toBottomOf="@id/cv_kosong"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:18"
                        android:textSize="80sp"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_time_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tv_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minute"
                        android:textColor="@color/black_200"
                        app:layout_constraintTop_toBottomOf="@id/tv_time"
                        app:layout_constraintStart_toStartOf="@id/tv_time"
                        app:layout_constraintEnd_toStartOf="@id/tv_second"/>

                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/second"
                        android:textColor="@color/black_200"
                        app:layout_constraintTop_toBottomOf="@id/tv_time"
                        app:layout_constraintStart_toEndOf="@id/tv_minute"
                        app:layout_constraintEnd_toEndOf="@id/tv_time" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        android:paddingVertical="12dp"
                        android:text="@string/done_text"
                        android:textStyle="bold"
                        style="@style/CustomOutlinedButton"
                        app:layout_constraintTop_toBottomOf="@id/tv_minute"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>