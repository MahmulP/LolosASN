<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetailPurchaseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/colorPrimary"
            app:title="@string/detail_payment"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance"
            android:background="@color/white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/divider"
            android:src="@drawable/underline"
            app:tint="@color/grey" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@id/btn_send">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_package_with_title"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="30sp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        app:layout_constraintTop_toBottomOf="@id/tv_product"
                        app:layout_constraintStart_toStartOf="@id/tv_product"/>

                    <TextView
                        android:id="@+id/tv_product_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        app:layout_constraintStart_toStartOf="@id/tv_title" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/price"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toEndOf="@id/tv_product_text"
                        app:layout_constraintTop_toTopOf="@id/tv_product_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_product_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/cv_product">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_method_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_method"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/iv_bank"
                        android:layout_width="118dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/ic_bni"
                        app:layout_constraintStart_toStartOf="@id/tv_method_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_method_title" />

                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/bank_bni"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toEndOf="@id/iv_bank"
                        app:layout_constraintTop_toTopOf="@id/iv_bank"
                        app:layout_constraintBottom_toTopOf="@id/tv_bank_number"/>

                    <TextView
                        android:id="@+id/tv_bank_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_number"
                        app:layout_constraintStart_toStartOf="@id/tv_bank_name"
                        app:layout_constraintTop_toBottomOf="@id/tv_bank_name"
                        app:layout_constraintBottom_toTopOf="@id/tv_bank_holder"/>

                    <TextView
                        android:id="@+id/tv_bank_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_holder"
                        app:layout_constraintStart_toStartOf="@id/tv_bank_number"
                        app:layout_constraintTop_toBottomOf="@id/tv_bank_number"
                        app:layout_constraintBottom_toBottomOf="@id/iv_bank"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/cv_method">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_information_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_info"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/price_text"
                        app:layout_constraintStart_toStartOf="@id/tv_information_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_information_title" />

                    <TextView
                        android:id="@+id/tv_information_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/primaryColor"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_price_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_price_text"/>

                    <TextView
                        android:id="@+id/tv_admin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/admin_text"
                        app:layout_constraintStart_toStartOf="@id/tv_information_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_price_text" />

                    <TextView
                        android:id="@+id/tv_admin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/primaryColor"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_admin_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_admin_text"/>

                    <TextView
                        android:id="@+id/tv_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/total"
                        app:layout_constraintStart_toStartOf="@id/tv_information_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_admin_text" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/primaryColor"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_total_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_total_text"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/cv_information">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_upload_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageButton
                        android:id="@+id/ib_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:contentDescription="@string/icon"
                        android:padding="8dp"
                        android:src="@drawable/baseline_file_upload_24"
                        android:background="@drawable/circle_border"
                        android:backgroundTint="@color/blue_100"
                        app:layout_constraintTop_toBottomOf="@id/tv_upload_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/black" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/note"
                app:layout_constraintTop_toBottomOf="@id/cv_upload" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/send"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>