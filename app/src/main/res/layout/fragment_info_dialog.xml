<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.dialog.InfoDialogFragment">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/gambar_kertas"
        android:src="@drawable/ic_validation_test"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/level_soal"
        android:textColor="@color/primaryColor"
        android:textSize="25sp"
        android:gravity="center"
        app:minTextSize="12sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/info_desc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_skor_easy"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/orange"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_easy"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_coin"/>

                <ImageView
                    android:id="@+id/iv_coin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_coin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_score"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_easy"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/green_400"
            app:strokeColor="@color/green_400"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cv_skor_easy"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/easy"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_line_top"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:contentDescription="@string/divider"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/cv_skor_easy"
            app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
            app:layout_constraintStart_toEndOf="@id/cv_skor_easy"
            app:layout_constraintEnd_toStartOf="@id/cv_skor_medium" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_skor_medium"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/orange"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_skor_easy">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_score_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_medium"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_coin_medium"/>

                <ImageView
                    android:id="@+id/iv_coin_medium"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_coin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_score_medium"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_medium"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:strokeColor="@color/primaryColor"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cv_skor_medium"
            app:layout_constraintStart_toStartOf="@id/cv_skor_medium">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medium"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:contentDescription="@string/divider"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/cv_skor_easy"
            app:layout_constraintBottom_toBottomOf="@id/cv_ket_easy"
            app:layout_constraintStart_toEndOf="@id/cv_skor_medium"
            app:layout_constraintEnd_toStartOf="@id/cv_skor_hard" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_skor_hard"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/orange"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_skor_medium">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_score_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_hard"
                    android:textSize="15sp"
                    android:textColor="@color/orange"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_coin_hard"/>

                <ImageView
                    android:id="@+id/iv_coin_hard"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_coin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_score_hard"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ket_hard"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/red"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cv_skor_hard"
            app:layout_constraintStart_toStartOf="@id/cv_skor_hard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_status_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oke"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>