<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TryoutDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/colorPrimary"
            app:title="@string/detail_tryout"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/divider"
            android:src="@drawable/underline" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/cpns"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:background="@drawable/primary_border"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tryout_one"
        android:textSize="33sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_premium"
        app:layout_constraintStart_toStartOf="@id/tv_premium" />

    <TextView
        android:id="@+id/tv_periode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/periode_tryout"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/calendar_icon"
        android:src="@drawable/baseline_calendar_today_24"
        app:layout_constraintTop_toBottomOf="@id/tv_periode"
        app:layout_constraintStart_toStartOf="@id/tv_periode"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/date_range"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iv_date"
        app:layout_constraintTop_toTopOf="@id/iv_date"
        app:layout_constraintBottom_toBottomOf="@id/iv_date" />

    <ImageView
        android:id="@+id/iv_dot_twk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dot"
        android:src="@drawable/baseline_circle_24"
        app:layout_constraintTop_toTopOf="@id/cv_twk"
        app:layout_constraintBottom_toBottomOf="@id/cv_twk"
        app:layout_constraintStart_toStartOf="@id/iv_date"
        app:tint="@color/grey" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-4dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/vertical_line"
        app:layout_constraintTop_toBottomOf="@id/iv_dot_twk"
        app:layout_constraintBottom_toTopOf="@id/iv_dot_tiu"
        app:layout_constraintStart_toStartOf="@id/iv_dot_twk"
        app:layout_constraintEnd_toEndOf="@id/iv_dot_twk" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_twk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date_range"
        app:layout_constraintStart_toEndOf="@id/iv_dot_twk"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/black_500"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_category_twk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twk"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ic_note_twk"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_note"
                app:layout_constraintTop_toBottomOf="@id/tv_category_twk"
                app:layout_constraintStart_toStartOf="@id/tv_category_twk" />

            <TextView
                android:id="@+id/tv_soal_twk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/soal"
                app:layout_constraintStart_toEndOf="@id/ic_note_twk"
                app:layout_constraintTop_toTopOf="@id/ic_note_twk"
                app:layout_constraintBottom_toBottomOf="@id/ic_note_twk" />

            <ImageView
                android:id="@+id/ic_time_twk"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toBottomOf="@id/tv_category_twk"
                app:layout_constraintStart_toEndOf="@id/tv_soal_twk" />

            <TextView
                android:id="@+id/tv_time_twk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/time"
                app:layout_constraintStart_toEndOf="@id/ic_time_twk"
                app:layout_constraintTop_toTopOf="@id/ic_time_twk"
                app:layout_constraintBottom_toBottomOf="@id/ic_time_twk" />

            <TextView
                android:id="@+id/tv_passgrade_twk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/passing_grade"
                app:layout_constraintStart_toStartOf="@id/ic_note_twk"
                app:layout_constraintTop_toBottomOf="@id/ic_note_twk" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_dot_tiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dot"
        android:src="@drawable/baseline_circle_24"
        app:layout_constraintTop_toTopOf="@id/cv_tiu"
        app:layout_constraintBottom_toBottomOf="@id/cv_tiu"
        app:layout_constraintStart_toStartOf="@id/iv_date"
        app:tint="@color/grey" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tiu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_twk"
        app:layout_constraintStart_toEndOf="@id/iv_dot_tiu"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/black_500"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_category_tiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiu"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ic_note_tiu"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_note"
                app:layout_constraintTop_toBottomOf="@id/tv_category_tiu"
                app:layout_constraintStart_toStartOf="@id/tv_category_tiu" />

            <TextView
                android:id="@+id/tv_soal_tiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/soal"
                app:layout_constraintStart_toEndOf="@id/ic_note_tiu"
                app:layout_constraintTop_toTopOf="@id/ic_note_tiu"
                app:layout_constraintBottom_toBottomOf="@id/ic_note_tiu" />

            <ImageView
                android:id="@+id/ic_time_tiu"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toBottomOf="@id/tv_category_tiu"
                app:layout_constraintStart_toEndOf="@id/tv_soal_tiu" />

            <TextView
                android:id="@+id/tv_time_tiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/time"
                app:layout_constraintStart_toEndOf="@id/ic_time_tiu"
                app:layout_constraintTop_toTopOf="@id/ic_time_tiu"
                app:layout_constraintBottom_toBottomOf="@id/ic_time_tiu" />

            <TextView
                android:id="@+id/tv_passgrade_tiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/passing_grade"
                app:layout_constraintStart_toStartOf="@id/ic_note_tiu"
                app:layout_constraintTop_toBottomOf="@id/ic_note_tiu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_dot_tkp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dot"
        android:src="@drawable/baseline_circle_24"
        app:layout_constraintTop_toTopOf="@id/cv_tkp"
        app:layout_constraintBottom_toBottomOf="@id/cv_tkp"
        app:layout_constraintStart_toStartOf="@id/iv_date"
        app:tint="@color/grey" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-4dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/vertical_line"
        app:layout_constraintTop_toBottomOf="@id/iv_dot_tiu"
        app:layout_constraintBottom_toTopOf="@id/iv_dot_tkp"
        app:layout_constraintStart_toStartOf="@id/iv_dot_tiu"
        app:layout_constraintEnd_toEndOf="@id/iv_dot_tiu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tkp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_tiu"
        app:layout_constraintStart_toEndOf="@id/iv_dot_tkp"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/black_500"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_category_tkp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tkp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ic_note_tkp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_note"
                app:layout_constraintTop_toBottomOf="@id/tv_category_tkp"
                app:layout_constraintStart_toStartOf="@id/tv_category_tkp" />

            <TextView
                android:id="@+id/tv_soal_tkp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/soal"
                app:layout_constraintStart_toEndOf="@id/ic_note_tkp"
                app:layout_constraintTop_toTopOf="@id/ic_note_tkp"
                app:layout_constraintBottom_toBottomOf="@id/ic_note_tkp" />

            <ImageView
                android:id="@+id/ic_time_tkp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toBottomOf="@id/tv_category_tkp"
                app:layout_constraintStart_toEndOf="@id/tv_soal_tkp" />

            <TextView
                android:id="@+id/tv_time_tkp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/time"
                app:layout_constraintStart_toEndOf="@id/ic_time_tkp"
                app:layout_constraintTop_toTopOf="@id/ic_time_tkp"
                app:layout_constraintBottom_toBottomOf="@id/ic_time_tkp" />

            <TextView
                android:id="@+id/tv_passgrade_tkp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/passing_grade"
                app:layout_constraintStart_toStartOf="@id/ic_note_tkp"
                app:layout_constraintTop_toBottomOf="@id/ic_note_tkp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_tkp"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/black_500"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/divider_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/divider"
                android:paddingTop="8dp"
                android:src="@drawable/underline"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_info"
                app:tint="@color/grey" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_description"
                app:layout_constraintTop_toBottomOf="@id/divider_info" />
            
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>