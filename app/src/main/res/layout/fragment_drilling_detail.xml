<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.DrillingDetailFragment"
    android:paddingBottom="64dp">

    <View
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_home"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="@string/drilling_title"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="@string/tab_twk"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="@string/drilling_description"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_drilling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_drilling_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/drilling_category"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_drilling_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drilling_item_description"
                app:layout_constraintTop_toBottomOf="@id/tv_drilling_title" />

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_note"
                app:layout_constraintTop_toBottomOf="@id/tv_drilling_description"
                app:layout_constraintStart_toStartOf="@id/tv_drilling_description" />

            <TextView
                android:id="@+id/tv_total_soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/total_soal"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/iv_list"
                app:layout_constraintTop_toTopOf="@id/iv_list"
                app:layout_constraintBottom_toBottomOf="@id/iv_list" />

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toBottomOf="@id/tv_drilling_description"
                app:layout_constraintStart_toEndOf="@id/tv_total_soal" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/total_time"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/iv_time"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                app:layout_constraintBottom_toBottomOf="@id/iv_time" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/start"
                android:fontFamily="@font/roboto_bold"
                app:cornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@id/iv_list"
                app:layout_constraintStart_toStartOf="@id/iv_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_history_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/test_history"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/cv_drilling" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_history_text"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/list_history_drilling"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="133dp"
        android:layout_height="150dp"
        android:src="@drawable/empty_image"
        app:layout_constraintTop_toBottomOf="@id/tv_history_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>