<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ExaminationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/colorPrimary"
            app:title="@string/twk"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance"
            android:background="@color/white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/divider"
            android:src="@drawable/underline"
            app:tint="@color/grey" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:background="@color/thirdPrimary"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="1"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:backgroundTint="@color/primaryColor"
            android:padding="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="3"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="4"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="5"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:text="6"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/circle_border"
            android:padding="4dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_nomor_soal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="Soal 2"
        android:textColor="@color/primaryColor"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_bold"
        android:background="@drawable/primary_border"
        android:backgroundTint="@color/thirdPrimary"
        app:layout_constraintTop_toBottomOf="@id/number_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_check_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/check_everything"
        app:layout_constraintTop_toTopOf="@id/tv_nomor_soal"
        app:layout_constraintBottom_toBottomOf="@id/tv_nomor_soal"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/underline"
        app:layout_constraintTop_toBottomOf="@id/btn_check_all" />

    <TextView
        android:id="@+id/tv_soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/soal_text"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <LinearLayout
        android:id="@+id/layout_opsi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_soal"
        app:layout_constraintBottom_toTopOf="@id/appbar_time">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/opsi_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@drawable/card_background_selector">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_choice_a"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="A"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@color/primaryColor"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/lorem_small"
                    app:layout_constraintTop_toTopOf="@id/tv_choice_a"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choice_a"
                    app:layout_constraintStart_toEndOf="@id/tv_choice_a"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/opsi_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:checkable="true"
            app:cardBackgroundColor="@drawable/card_background_selector">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_choice_b"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="B"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@color/primaryColor"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/lorem_small"
                    app:layout_constraintTop_toTopOf="@id/tv_choice_b"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choice_b"
                    app:layout_constraintStart_toEndOf="@id/tv_choice_b"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/opsi_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:checkable="true"
            app:cardBackgroundColor="@drawable/card_background_selector">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_choice_c"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="C"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@color/primaryColor"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/lorem_small"
                    app:layout_constraintTop_toTopOf="@id/tv_choice_c"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choice_c"
                    app:layout_constraintStart_toEndOf="@id/tv_choice_c"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/opsi_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@drawable/card_background_selector">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_choice_d"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="D"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@color/primaryColor"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/lorem_small"
                    app:layout_constraintTop_toTopOf="@id/tv_choice_d"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choice_d"
                    app:layout_constraintStart_toEndOf="@id/tv_choice_d"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/divider_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/divider"
                android:src="@drawable/underline"
                app:tint="@color/grey"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Soal 1"
                android:drawableLeft="@drawable/baseline_arrow_circle_left_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="03:23:05"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="@id/btn_next"
                app:layout_constraintBottom_toBottomOf="@id/btn_next"
                app:layout_constraintStart_toEndOf="@id/btn_previous"
                app:layout_constraintEnd_toStartOf="@id/btn_next"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Soal 3"
                android:drawableRight="@drawable/baseline_arrow_circle_right_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_time"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>