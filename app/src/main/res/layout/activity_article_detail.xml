<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ArticleDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/colorPrimary"
            app:title="@string/article_detail"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance"
            android:background="@color/white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/divider"
            android:src="@drawable/underline"
            app:tint="@color/grey" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/iv_article_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_picture"
                android:src="@drawable/baby_photo"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_writer_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/avatar"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/iv_article_picture"
                app:layout_constraintBottom_toBottomOf="@id/iv_article_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/white"/>

            <TextView
                android:id="@+id/tv_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="@string/username"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toBottomOf="@id/iv_writer_photo"
                app:layout_constraintStart_toStartOf="@id/iv_writer_photo"
                app:layout_constraintEnd_toEndOf="@id/iv_writer_photo" />

            <TextView
                android:id="@+id/tv_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/article_title_detail"
                android:textSize="21sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toBottomOf="@id/tv_writer_name" />

            <ImageView
                android:id="@+id/iv_ic_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/outline_timer_24"
                app:layout_constraintTop_toBottomOf="@id/tv_article_title"
                app:layout_constraintStart_toStartOf="@id/tv_article_title"
                app:tint="@color/black_100" />

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/time"
                android:textColor="@color/black_100"
                app:layout_constraintStart_toEndOf="@id/iv_ic_time"
                app:layout_constraintTop_toTopOf="@id/iv_ic_time"
                app:layout_constraintBottom_toBottomOf="@id/iv_ic_time" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/content_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_date_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>