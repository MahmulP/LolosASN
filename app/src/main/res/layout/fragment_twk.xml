<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.TWKFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twk"
            android:textStyle="bold"
            android:textColor="@color/black_500"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dot"
            android:src="@drawable/baseline_circle_24"
            app:layout_constraintTop_toTopOf="@id/cv_material"
            app:layout_constraintBottom_toBottomOf="@id/cv_material"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/grey" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_material"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_category"
            app:layout_constraintStart_toEndOf="@id/iv_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="133dp"
                    android:layout_height="67dp"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/cover"
                    android:src="@drawable/nasionalisme_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_material"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/ib_materi"
                    app:layout_constraintStart_toStartOf="@id/ib_materi" />

                <ImageButton
                    android:id="@+id/ib_materi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/button_materi"
                    android:src="@drawable/ic_small_book"
                    app:layout_constraintStart_toEndOf="@id/iv_picture"
                    app:layout_constraintTop_toTopOf="@id/iv_picture"
                    app:layout_constraintBottom_toBottomOf="@id/iv_picture"
                    app:tint="@color/primaryColor"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/ebook"
                    android:textColor="@color/primaryColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ib_materi"
                    app:layout_constraintBottom_toBottomOf="@id/ib_materi" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>