<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PurchaseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/colorPrimary"
            app:title="@string/purchase"
            app:titleTextAppearance="@style/CustomToolbarTitleTextAppearance"
            android:background="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/divider"
            android:src="@drawable/underline" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/subscribe_package"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subscribe">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/primary_border"
                android:backgroundTint="@color/orange"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_total_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/green_100"
                app:layout_constraintTop_toBottomOf="@id/tv_popular"
                app:layout_constraintStart_toStartOf="@id/tv_popular"
                app:layout_constraintEnd_toStartOf="@id/tv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/ic_check_circle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/baseline_check_circle_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_total_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="25sp"
                        android:textColor="@color/green_500"
                        app:layout_constraintTop_toTopOf="@id/ic_check_circle"
                        app:layout_constraintBottom_toTopOf="@id/tv_tryout_package"
                        app:layout_constraintStart_toStartOf="@id/tv_tryout_package"
                        app:layout_constraintEnd_toEndOf="@id/tv_tryout_package"/>

                    <TextView
                        android:id="@+id/tv_tryout_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tryout_package"
                        android:textColor="@color/green_500"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toEndOf="@id/ic_check_circle"
                        app:layout_constraintTop_toBottomOf="@id/tv_total_package"
                        app:layout_constraintBottom_toBottomOf="@id/ic_check_circle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/total_package_with_title"
                android:fontFamily="@font/roboto_bold"
                android:textSize="23sp"
                android:ellipsize="none"
                android:maxLines="2"
                app:layout_constraintTop_toTopOf="@id/cv_total_package"
                app:layout_constraintStart_toEndOf="@id/cv_total_package"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.6"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cv_total_package"
                app:layout_constraintStart_toStartOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_normal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/price"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@id/tv_price"
                app:layout_constraintTop_toTopOf="@id/tv_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_price" />

            <View
                android:id="@+id/strike_through_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintStart_toStartOf="@id/tv_normal_price"
                app:layout_constraintEnd_toEndOf="@id/tv_normal_price"
                app:layout_constraintTop_toTopOf="@id/tv_normal_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_normal_price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cv_popular">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_total_package_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/secondPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_title_normal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/ic_check_circle_normal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/baseline_check_circle_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/blue_100" />

                    <TextView
                        android:id="@+id/tv_total_package_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="25sp"
                        android:textColor="@color/primaryColor"
                        app:layout_constraintTop_toTopOf="@id/ic_check_circle_normal"
                        app:layout_constraintBottom_toTopOf="@id/tv_tryout_package_normal"
                        app:layout_constraintStart_toStartOf="@id/tv_tryout_package_normal"
                        app:layout_constraintEnd_toEndOf="@id/tv_tryout_package_normal"/>

                    <TextView
                        android:id="@+id/tv_tryout_package_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tryout_package"
                        android:textColor="@color/primaryColor"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto_bold"
                        app:layout_constraintStart_toEndOf="@id/ic_check_circle_normal"
                        app:layout_constraintTop_toBottomOf="@id/tv_total_package_normal"
                        app:layout_constraintBottom_toBottomOf="@id/ic_check_circle_normal" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_title_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/total_package_with_title"
                android:fontFamily="@font/roboto_bold"
                android:textSize="23sp"
                android:ellipsize="none"
                android:maxLines="2"
                app:layout_constraintTop_toTopOf="@id/cv_total_package_normal"
                app:layout_constraintStart_toEndOf="@id/cv_total_package_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.6"/>

            <TextView
                android:id="@+id/tv_price_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cv_total_package_normal"
                app:layout_constraintStart_toStartOf="@id/tv_title_normal" />

            <TextView
                android:id="@+id/tv_normal_price_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/price"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@id/tv_price_normal"
                app:layout_constraintTop_toTopOf="@id/tv_price_normal"
                app:layout_constraintBottom_toBottomOf="@id/tv_price_normal" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintStart_toStartOf="@id/tv_normal_price_price"
                app:layout_constraintEnd_toEndOf="@id/tv_normal_price_price"
                app:layout_constraintTop_toTopOf="@id/tv_normal_price_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_normal_price_price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>