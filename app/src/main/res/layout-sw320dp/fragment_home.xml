<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/thirdPrimary"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="120dp">

        <View
            android:id="@+id/waves"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_home"
            app:layout_constraintTop_toTopOf="parent"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_greet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_notification"
            app:layout_constraintTop_toTopOf="@id/waves"
            app:layout_constraintBottom_toTopOf="@id/tv_date_greet"
            android:text="@string/greeting_text"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="27sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:minTextSize="12sp"/>

        <TextView
            android:id="@+id/tv_date_greet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_greet"
            app:layout_constraintBottom_toBottomOf="@id/waves"
            android:text="@string/greeting_date"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/notification_bell"
            android:padding="10dp"
            android:src="@drawable/ic_notification"
            android:background="@drawable/circle_border"
            android:scaleType="fitCenter"
            app:tint="@color/black_500"
            app:layout_constraintTop_toTopOf="@id/tv_greet"
            app:layout_constraintBottom_toBottomOf="@id/tv_greet"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/is_active"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            android:importantForAccessibility="no"
            android:src="@drawable/baseline_circle_24"
            app:layout_constraintTop_toTopOf="@id/ib_notification"
            app:layout_constraintEnd_toEndOf="@id/ib_notification"
            app:layout_constraintStart_toStartOf="@id/ib_notification"
            app:tint="@color/red"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/waves"
            app:layout_constraintBottom_toBottomOf="@id/waves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/intro3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/username"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:minTextSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/iv_user"
                    app:layout_constraintBottom_toTopOf="@id/tv_member"
                    app:layout_constraintStart_toEndOf="@id/iv_user"
                    app:layout_constraintEnd_toStartOf="@id/ib_cart"/>

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    tools:text="@string/member_status"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    app:layout_constraintStart_toEndOf="@id/iv_user" />

                <ImageButton
                    android:id="@+id/ib_cart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/cart"
                    android:padding="12dp"
                    android:src="@drawable/ic_bag"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="?attr/colorPrimary"
                    android:scaleType="fitCenter"
                    app:tint="@color/white"
                    app:layout_constraintTop_toTopOf="@id/tv_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_member"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/ib_tryout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:contentDescription="@string/tryout_text"
            android:background="@drawable/shape_border"
            android:src="@drawable/ic_pen"
            android:backgroundTint="?attr/colorPrimary"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_user"
            app:layout_constraintStart_toStartOf="@id/cv_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tryout"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ib_tryout"
            app:layout_constraintStart_toStartOf="@id/ib_tryout"
            app:layout_constraintEnd_toEndOf="@id/ib_tryout" />

        <ImageButton
            android:id="@+id/ib_drilling"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:contentDescription="@string/drilling"
            android:background="@drawable/shape_border"
            android:src="@drawable/ic_drilling"
            android:scaleType="fitCenter"
            android:backgroundTint="?attr/colorPrimary"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_user"
            app:layout_constraintStart_toEndOf="@id/ib_tryout"
            app:layout_constraintEnd_toStartOf="@id/ib_materi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drilling"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ib_drilling"
            app:layout_constraintStart_toStartOf="@id/ib_drilling"
            app:layout_constraintEnd_toEndOf="@id/ib_drilling" />

        <ImageButton
            android:id="@+id/ib_materi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:contentDescription="@string/tryout_text"
            android:background="@drawable/shape_border"
            android:src="@drawable/ic_bookmark"
            android:backgroundTint="?attr/colorPrimary"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_user"
            app:layout_constraintStart_toEndOf="@id/ib_drilling"
            app:layout_constraintEnd_toStartOf="@id/ib_artikel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_materi"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ib_materi"
            app:layout_constraintStart_toStartOf="@id/ib_materi"
            app:layout_constraintEnd_toEndOf="@id/ib_materi" />

        <ImageButton
            android:id="@+id/ib_artikel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:contentDescription="@string/tryout_text"
            android:background="@drawable/shape_border"
            android:src="@drawable/ic_notes_no_pen"
            android:backgroundTint="?attr/colorPrimary"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_user"
            app:layout_constraintEnd_toEndOf="@id/cv_user"/>

        <TextView
            android:id="@+id/tv_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ib_artikel"
            app:layout_constraintStart_toStartOf="@id/ib_artikel"
            app:layout_constraintEnd_toEndOf="@id/ib_artikel" />

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/ads_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutDescription="@xml/fragment_home_xml_ads_layout_scene320"
            app:layout_constraintBottom_toTopOf="@id/tv_newest_tryout"
            app:layout_constraintTop_toBottomOf="@id/tv_artikel">

            <ImageView
                android:id="@+id/iv_invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/ads"
                android:src="@drawable/ads"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ads1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/ads"
                android:scaleType="fitXY"
                android:src="@drawable/ads"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ads2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/ads"
                android:src="@drawable/ads"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ads3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/ads"
                android:src="@drawable/ads"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ads4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/ads"
                android:scaleType="fitXY"
                android:src="@drawable/ads"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/menu1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="16dp"
                app:altSrc="@drawable/baseline_circle_24"
                app:layout_constraintEnd_toStartOf="@+id/menu2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/iv_invisible"
                app:layout_constraintTop_toBottomOf="@id/iv_invisible"
                app:srcCompat="@drawable/outline_circle_24"
                app:tint="@color/primaryColor" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/menu2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:altSrc="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@+id/menu1"
                app:layout_constraintEnd_toStartOf="@+id/menu3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/menu1"
                app:layout_constraintTop_toTopOf="@+id/menu1"
                app:srcCompat="@drawable/outline_circle_24"
                app:tint="@color/primaryColor" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/menu3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:altSrc="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@+id/menu2"
                app:layout_constraintEnd_toStartOf="@+id/menu4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/menu2"
                app:layout_constraintTop_toTopOf="@+id/menu2"
                app:srcCompat="@drawable/outline_circle_24"
                app:tint="@color/primaryColor" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/menu4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="140dp"
                app:altSrc="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@+id/menu3"
                app:layout_constraintEnd_toEndOf="@id/iv_invisible"
                app:layout_constraintStart_toEndOf="@+id/menu3"
                app:layout_constraintTop_toTopOf="@+id/menu3"
                app:srcCompat="@drawable/outline_circle_24"
                app:tint="@color/primaryColor" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <TextView
            android:id="@+id/tv_newest_tryout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/newest_tryout"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/ads_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_all_tryout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/check_all"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="@id/tv_newest_tryout"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tryout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_all_tryout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/list_newest_tryout"/>

        <TextView
            android:id="@+id/tv_popular_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:text="@string/popular_article"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintTop_toBottomOf="@id/rv_tryout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_all_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/check_all"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="@id/tv_popular_article"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_all_article"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/iv_article"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/article_image"
                    android:src="@drawable/dummy_article"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_article_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/article_title"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_article"
                    app:layout_constraintStart_toStartOf="@id/iv_article"
                    app:layout_constraintEnd_toEndOf="@id/iv_article" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/date"
                    app:layout_constraintTop_toBottomOf="@id/tv_article_title"
                    app:layout_constraintStart_toStartOf="@id/tv_article_title"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rv_article"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tv_all_article"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            tools:listitem="@layout/list_popular_article" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>